<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_activity"
        tools:context=".ui.MenuActivity">

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/welcome"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ImageView>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/src_mineFm"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_my_head"
                        app:shapeAppearanceOverlay="@style/ImageViewBannerHead"
                        android:layout_marginTop="36dp"
                        android:layout_marginLeft="20dp"
                        android:src="@mipmap/logo"
                        android:scaleType="centerCrop"
                        android:layout_width="72dp"
                        android:layout_height="72dp">

                    </com.google.android.material.imageview.ShapeableImageView>


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_marginTop="36dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_fmMy_username"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                        <TextView
                            android:id="@+id/tv_fmMy_phone"
                            android:layout_marginLeft="16dp"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/white"
                            app:layout_constraintLeft_toRightOf="@id/iv_my_head"
                            app:layout_constraintBottom_toBottomOf="@id/iv_my_head"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    app:layout_constraintTop_toBottomOf="@+id/iv_my_head"
                    android:layout_marginTop="24dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/shape_white_radios8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ly_myHome_set"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/shezhi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_weight="1"
                            android:text="@string/my_adjustment"
                            android:layout_marginLeft="16dp"
                            android:textColor="@color/text_333"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                        </TextView>

                        <ImageView
                            android:src="@drawable/ic_to"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <View
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/bg_activity"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/kefufill__"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_weight="1"
                            android:text="@string/my_customer_service"
                            android:layout_marginLeft="16dp"
                            android:textColor="@color/text_333"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                        </TextView>
                        <ImageView
                            android:src="@drawable/ic_to"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <View
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/bg_activity"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/xieyi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_weight="1"
                            android:text="@string/my_privacy_notices"
                            android:layout_marginLeft="16dp"
                            android:textColor="@color/text_333"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                        </TextView>

                        <ImageView
                            android:src="@drawable/ic_to"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <View
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/bg_activity"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/yuyin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_weight="1"
                            android:text="@string/my_online_customer_service"
                            android:layout_marginLeft="16dp"
                            android:textColor="@color/text_333"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                        </TextView>

                        <ImageView
                            android:src="@drawable/ic_to"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <include layout="@layout/privacy_text" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
