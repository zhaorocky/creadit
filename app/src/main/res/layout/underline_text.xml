<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/tv_underLine_text"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <View
        android:id="@+id/line_underText"
        android:layout_marginBottom="1dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_underLine_text"
        app:layout_constraintRight_toRightOf="@+id/tv_underLine_text"
        app:layout_constraintBottom_toBottomOf="@+id/tv_underLine_text"
        android:layout_width="0dp"
        android:layout_height="2px">
    </View>


</androidx.constraintlayout.widget.ConstraintLayout>