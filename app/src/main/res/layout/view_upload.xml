<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_radios8"
    tools:context=".ui.LoginActivity">


    <FrameLayout
        android:id="@+id/fl_upload"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="89dp"
        android:background="@drawable/shape_up_radios8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintDimensionRatio="h,1.5:1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/iv_content"
            android:visibility="gone"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/iv_tag"
            android:src="@drawable/camer_up"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_viewUp"
        android:text="Frontal"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/fl_upload"
        android:textColor="@color/purple_200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_upLoadStatus"
        android:visibility="invisible"
        android:src="@drawable/zhengque"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="-10dp"
        app:layout_constraintTop_toTopOf="@+id/fl_upload"
        app:layout_constraintEnd_toEndOf="@+id/fl_upload"
        android:layout_width="28dp"
        android:layout_height="28dp" />
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone"
        android:layout_marginEnd="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fl_upload"
        app:layout_constraintBottom_toBottomOf="@+id/fl_upload"
        android:indeterminateDrawable="@drawable/load_animal" />
</androidx.constraintlayout.widget.ConstraintLayout>

